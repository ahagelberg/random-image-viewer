<Window x:Class="RandomImageViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Random Image Viewer" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="Manual"
        KeyDown="Window_KeyDown"
        SizeChanged="Window_SizeChanged"
        Focusable="True"
        FocusVisualStyle="{x:Null}">
    
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        
        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="Gray"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Toolbar -->
        <StackPanel Name="TopToolbar" Grid.Row="0" Orientation="Horizontal" Background="LightGray" Margin="5">
            <Button Name="SelectFolderButton" 
                    Content="Select Folder" 
                    Click="SelectFolderButton_Click"
                    Style="{StaticResource ButtonStyle}"
                    Focusable="False"/>
            
            <Button Name="PreviousImageButton" 
                    Content="Previous (Backspace)" 
                    Click="PreviousImageButton_Click"
                    Style="{StaticResource ButtonStyle}"
                    IsEnabled="False"
                    Focusable="False"/>
            
            <Button Name="NextImageButton" 
                    Content="Next (Space)" 
                    Click="NextImageButton_Click"
                    Style="{StaticResource ButtonStyle}"
                    IsEnabled="False"
                    Focusable="False"/>
            
            <Separator Margin="10,0"/>
            
            <TextBlock Name="StatusText" 
                       Text="Select a folder to begin viewing images"
                       Style="{StaticResource InfoTextStyle}"
                       VerticalAlignment="Center"
                       Focusable="False"/>
            
            <Separator Margin="10,0"/>
            
            <TextBlock Text="Space: Next | Backspace: Previous | End/N: Jump to End | Delete: Remove | Enter/F11/F: Fullscreen | Ctrl+O: Open Folder | Esc: Exit | Q: Quit"
                       Style="{StaticResource InfoTextStyle}"
                       VerticalAlignment="Center"
                       Focusable="False"/>

            <!-- About Button -->
            <Button Name="AboutButton" 
                    Content="About" 
                    Click="AboutButton_Click"
                    Style="{StaticResource ButtonStyle}"
                    Focusable="False"
                    Width="60"
                    Margin="5,0,0,0"/>
        </StackPanel>

        <!-- Main Image Display Area -->
        <Border Name="ImageBorder" Grid.Row="2" 
                BorderBrush="DarkGray" 
                BorderThickness="1" 
                Margin="5,5,5,0"
                Background="Black"
                Focusable="False">
            
            <ScrollViewer Name="ImageScrollViewer" 
                          HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Auto"
                          Focusable="False">
                
                <Grid Name="ImageContainer" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center"
                      Focusable="True"
                      MouseLeftButtonDown="ImageContainer_MouseLeftButtonDown">
                    <Image Name="MainImage" 
                           Stretch="Uniform"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           Focusable="False"/>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- Bottom Status Bar -->
        <Border Name="BottomStatusBar" Grid.Row="3" Background="LightGray" Margin="5,0,5,5" Height="25">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Name="ImageInfoText" 
                           Text="No image loaded"
                           Style="{StaticResource InfoTextStyle}"
                           VerticalAlignment="Center"
                           Focusable="False"/>
                
                <Separator Margin="10,0"/>
                
                <TextBlock Name="ProgressText" 
                           Text=""
                           Style="{StaticResource InfoTextStyle}"
                           VerticalAlignment="Center"
                           Focusable="False"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
